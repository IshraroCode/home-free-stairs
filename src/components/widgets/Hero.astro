---
import user from "~/assets/images/hero-image.png";
import { BASE_URL } from "~/utils/apliInstance";

const {
  title = "Our Services",
  subtitle = "Expert stairlift services to support safe and comfortable movement at home.",
  backgroundImage,
  id,
  heroData
} = Astro.props;
 
---

<section
  {...id ? { id } : {}}
  class="relative w-full h-[70vh] md:h-[80vh] flex items-center justify-center"
>
  <!-- Background Image -->
  <img
    src={ heroData?.hero_bg_image?`${BASE_URL}/assets/${heroData?.hero_bg_image}`:user.src}
    alt="Stairlift service assistance"
    class="absolute inset-0 w-full h-full object-cover z-0"
    loading="eager"
  />

  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black/50 z-10"></div>

  <!-- Content -->
  <div class="relative z-20 text-center px-4 max-w-3xl">
 { heroData?.heading&&  <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
      {heroData?.heading}
    </h1>}

   {heroData?.description&&  <p class="text-lg md:text-xl text-white/90 leading-relaxed">
      {heroData?.description}
    </p>}
  </div>
</section>
